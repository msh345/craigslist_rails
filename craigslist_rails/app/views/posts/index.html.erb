
<h1> Posts for "<%= @category.title %>" </h1>
<% @posts.each do |eachpost| %>
<%= link_to 'Show me the post', category_post_path(@category.id, eachpost.id) %> <%= eachpost.title %>  <br>
<% end %>


<%= form_for :post, url: category_posts_path do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
 
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>